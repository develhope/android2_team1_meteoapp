<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/TodayLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin_second_third_screen"
        android:text="@string/tv_home_title"
        android:textColor="@color/blue"
        android:textSize="@dimen/hour_second_third_screen_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TodayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_today"
        android:textColor="@color/blue"
        android:textSize="@dimen/list_day_home_screen_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TodayLocation" />

    <TextView
        android:id="@+id/TodayFullDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="@dimen/list_day_home_screen_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TodayDate"
        tools:text="16 - 11 - 2022" />

</androidx.constraintlayout.widget.ConstraintLayout>