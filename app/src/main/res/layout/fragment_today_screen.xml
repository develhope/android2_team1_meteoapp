<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TodayScreen">


    <TextView
        android:id="@+id/TodayLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin_second_third_screen"
        android:text="@string/tv_home_title"
        android:textColor="@color/blue"
        android:textSize="@dimen/hour_second_third_screen_text_size"
        android:layout_marginStart="@dimen/padding_margin_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TodayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_today"
        android:layout_marginStart="@dimen/padding_margin_layout"
        android:textColor="@color/blue"
        android:textSize="@dimen/list_day_home_screen_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TodayLocation" />

    <TextView
        android:id="@+id/TodayFullDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rv_tv_day_month_date"
        android:textColor="@color/blue"
        android:layout_marginStart="@dimen/padding_margin_layout"
        android:textSize="@dimen/list_day_home_screen_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TodayDate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todayRecyclerViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_layout"
        android:layout_marginStart="@dimen/padding_margin_layout"
        android:layout_marginEnd="@dimen/padding_margin_layout"
        android:clipToPadding="false"
        android:paddingBottom="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TodayFullDate"
        tools:listitem="@layout/today_recycler_view_item" />

</androidx.constraintlayout.widget.ConstraintLayout>